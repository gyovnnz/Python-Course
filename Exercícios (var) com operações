print("Exercícios: \n")

x = 9
y = "gatos"
print("1)", x, y)

x = 3
y = "tigres tristes"
print("2)", x, y)

x = 5
y = "rosas"
#ao digitar print(x + y) obtemos um erro, pois não é possivel somar um inteiro com uma string.
#a forma correta seria:
print("3)", x, y)

x = 10
y = 9
print("4)\n a-", x + y)
print(" b-", x * y)
print(" c-", x - y)

print("\n\n FIM!!")
